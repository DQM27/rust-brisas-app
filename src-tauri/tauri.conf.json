{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mega Brisas (Beta)",
  "version": "1.0.0",
  "identifier": "com.design27.mega-brisas",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Mega Brisas",
        "width": 800,
        "height": 600,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' http://localhost:*"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright © 2026 Design27",
    "publisher": "Design27",
    "shortDescription": "Sistema ERP de Control de Acceso",
    "longDescription": "Mega Brisas es una solución integral para la gestión de control de acceso y contratistas desarrollado por Design27.",
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "languages": [
          "Spanish"
        ],
        "displayLanguageSelector": false,
        "installMode": "currentUser",
        "startMenuFolder": "Mega Brisas"
      }
    },
    "licenseFile": "LICENSE"
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/DQM27/rust-brisas-app/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDYzN0Y2OTUxREI3NzdENjcKUldSbmZYZmJVV2wvWSsweDcralByZnZSZDBscUt1OXEybCs4QytRN2ZtNlQ5L2VUeXVKSnFvQmgK"
    }
  }
}