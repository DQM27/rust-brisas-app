{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mega Brisas",
  "version": "1.0.0-alpha",
  "identifier": "com.femprobrisas.mega-brisas",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Mega Brisas",
        "width": 800,
        "height": 600,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' http://localhost:*"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/DQM27/rust-brisas-app/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDYzN0Y2OTUxREI3NzdENjcKUldSbmZYZmJVV2wvWSsweDcralByZnZSZDBscUt1OXEybCs4QytRN2ZtNlQ5L2VUeXVKSnFvQmgK"
    }
  }
}